<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/bulma.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title>Your Todo</title>
  </head>
  <body class="site">

    {{> nav }}

    <section class="section site-content">
      <div class="container">
        <div class="columns">
          <div class="column is-4 is-offset-4">
            <div class="card">
              <div class="card-content">
                <label class="label" for="title">Title</label>
                <h1 class="title">{{todo.title}}</h1>
                <label class="label" for="todoinfo">Todo Information</label>
                <h3 class="subtitle">{{todo.todoinfo}}</h3>
                <a href="/todo/{{todo.id}}/update" class="updateTodo button is-warning">Update Todo</a>
                <button type="button" class="deleteTodo button is-danger" id="{{todo.id}}">Delete Note</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {{> footer }}

    <script type="text/javascript" src="/assets/todo.js"></script>
  </body>
</html>
